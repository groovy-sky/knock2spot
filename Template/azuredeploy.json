{
  "$schema": "https://schema.management.azure.com/schemas/2019-04-01/deploymentTemplate.json#",
  "contentVersion": "1.0.0.0",
  "parameters": {
      "appName": {
          "defaultValue": "knock2spot",
          "type": "String"
      },
      "appImage": {
          "defaultValue": "gr00vysky/knock2spot:latest",
          "type": "String"
      },
      "nsgName": {
          "defaultValue": "sample-nsg",
          "type": "String"
      },
        "location": {
        "type": "string",
        "defaultValue": "[resourceGroup().location]"
      }
  },
  "variables": {
    "appPlan": "[concat('appPlan-',uniquestring(concat(resourceGroup().id,subscription().id)))]"
  },
  "resources": [
      {
          "type": "Microsoft.App/managedEnvironments",
          "apiVersion": "2023-08-01-preview",
          "name": "[variables('appPlan')]",
          "location": "[parameters('location')]",
          "properties": {
              "zoneRedundant": false,
              "kedaConfiguration": {},
              "daprConfiguration": {},
              "customDomainConfiguration": {},
              "peerAuthentication": {
                  "mtls": {
                      "enabled": false
                  }
              }
          }
      },
      {
          "type": "Microsoft.Network/networkSecurityGroups",
          "apiVersion": "2023-06-01",
          "name": "[parameters('nsgName')]",
          "location": "[parameters('location')]",
          "properties": {
              "securityRules": []
          }
      },
      {
          "type": "Microsoft.App/containerapps",
          "apiVersion": "2023-08-01-preview",
          "name": "[parameters('appName')]",
          "location": "[parameters('location')]",
          "dependsOn": [
              "[resourceId('Microsoft.App/managedEnvironments', variables('appPlan'))]"
          ],
          "identity": {
              "type": "SystemAssigned"
          },
          "properties": {
              "managedEnvironmentId": "[resourceId('Microsoft.App/managedEnvironments', variables('appPlan'))]",
              "environmentId": "[resourceId('Microsoft.App/managedEnvironments', variables('appPlan'))]",
              "configuration": {
                  "activeRevisionsMode": "Single",
                  "ingress": {
                      "external": true,
                      "targetPort": 8080,
                      "exposedPort": 0,
                      "transport": "Auto",
                      "traffic": [
                          {
                              "weight": 100,
                              "latestRevision": true
                          }
                      ],
                      "allowInsecure": true,
                      "clientCertificateMode": "Ignore",
                      "stickySessions": {
                          "affinity": "none"
                      }
                  }
              },
              "template": {
                  "containers": [
                      {
                          "image": "[parameters('appImage')]",
                          "name": "[parameters('appName')]",
                          "env": [
                              {
                                  "name": "RES_ID",
                                  "value": "[resourceId('Microsoft.Network/networkSecurityGroups', parameters('nsgName'))]"
                              },
                              {
                                  "name": "DST_PORT",
                                  "value": "22"
                              },
                              {
                                  "name": "RULE_NAME",
                                  "value": "ssh-port-allow"
                              },
                              {
                                  "name": "RULE_NUMBER",
                                  "value": "110"
                              }
                          ],
                          "resources": {
                              "cpu": 0.5,
                              "memory": "1Gi"
                          },
                          "probes": [
                              {
                                  "type": "Liveness",
                                  "httpGet": {
                                      "path": "/",
                                      "port": 8080,
                                      "scheme": "HTTP"
                                  },
                                  "periodSeconds": 10
                              }
                          ]
                      }
                  ],
                  "scale": {
                      "minReplicas": 0,
                      "maxReplicas": 10
                  },
                  "volumes": []
              }
          }
      }
  ],
  "outputs": {
      "containerAppId": {
          "type": "string",
          "value": "[resourceId('Microsoft.App/containerapps', parameters('appName'))]"
      },
      "nsgId": {
        "type": "string",
        "value": "[resourceId('Microsoft.Network/networkSecurityGroups', parameters('nsgName'))]"
    },
    "containerAppUrl": {
      "type": "string",
      "value": "[reference(resourceId('Microsoft.App/containerapps', parameters('appName'))).configuration.ingress.fqdn]"
    }
  }
}